{
  "manifest_version": 3,
  "name": "小红书Agent",
  "version": "1.0.0",
  "description": "在小红书评论区使用AI生成回复",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.xiaohongshu.com/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.xiaohongshu.com/*"],
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "settings/settings.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings/settings.html",
  "web_accessible_resources": [
    {
      "resources": ["css/content.css"],
      "matches": ["https://www.xiaohongshu.com/*"]
    }
  ]
}
